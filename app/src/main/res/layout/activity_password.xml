<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context="com.gyx.helplyfdemo.PasswordActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您是首次注册，请填写邀请码"
            android:textColor="#ff070707"
            android:textSize="15sp"
            />


        <com.gyx.helplyfdemo.view.MyInputPassward
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            app:autoCloseKeyBoard="true"
            app:isPwd = "false"
            app:bgFill="true"
            app:isCorner="true"
            app:isNeedDash="true"
            app:rectNormalColor="#fff"
            app:rectChooseColor="#fff"
            app:broderColor="#f0f"
            app:dottedColor="#00f"
            app:rectStroke="1px"
            app:broderWidth="1dp"
            app:numLength="6"
            app:textColor="#000"
            app:txtSize="20sp"




            />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView
                android:text="没有邀请码？"
                android:textColor="#ff666666"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="点击自动获取"
                android:textColor="#D2671D"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>
        
        <Button
            android:id="@+id/bt_getpwd"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff"
            android:text="登陆或注册"
            android:layout_width="351dp"
            android:layout_height="44dp"
            android:background="@drawable/shape_text_bg_to_enter_account" />
    </LinearLayout>


    <com.lnyp.pswkeyboard.widget.VirtualKeyboardView
        android:id="@+id/virtualKeyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />





</RelativeLayout>



























