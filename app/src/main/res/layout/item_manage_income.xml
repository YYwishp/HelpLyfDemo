<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:background="@drawable/shape_text_bg_half_corner"
        android:gravity="center_vertical"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:text="2018-08-20"
        android:textColor="#fff"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:paddingStart="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单201808200532"
            android:textColor="#ff070707"
            android:textSize="14sp" />

        <TextView
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_text_bg_to_enter_account"
            android:paddingBottom="2dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="2dp"
            android:text="待入账"
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+12.00"
            android:textColor="#ffd33718"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:paddingStart="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单201808200532"
            android:textColor="#ff070707"
            android:textSize="14sp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1000.00"
            android:textColor="#ff070707"
            android:textSize="15sp"
            />
    </LinearLayout>


    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:text="分销收益"
        android:textColor="#ff666666"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />









</LinearLayout>